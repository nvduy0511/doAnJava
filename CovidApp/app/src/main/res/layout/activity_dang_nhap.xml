<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgdangnhap"
    tools:context=".DangNhapActivity">
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:text="Đăng nhập"
        android:fontFamily="@font/roboto_slab_bold"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/main"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dangNhap_yc"
        android:fontFamily="@font/roboto_slab_bold"
        android:textSize="17sp"
        android:textAlignment="center"
        android:layout_margin="50dp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtlSDT_DangNhap"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:hint="Số điện thoại"
        app:prefixText="+84">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnTiepTuc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_custom_bogoc"
        android:text="Tiếp tục"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_slab_bold"
        android:textColor="@color/white">
    </androidx.appcompat.widget.AppCompatButton>

</LinearLayout>