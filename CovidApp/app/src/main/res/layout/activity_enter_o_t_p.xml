<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EnterOTPActivity">
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Xác minh OTP"
        android:fontFamily="@font/roboto_slab_bold"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/main"
        android:gravity="center_horizontal"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nhapOTP"
        android:fontFamily="@font/roboto_slab_bold"
        android:textSize="17sp"
        android:textAlignment="center"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/tvSDT_OTP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0367145523"
        android:fontFamily="@font/roboto_slab_bold"
        android:textStyle="bold"
        android:textSize="17sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtlOTP"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:hint="Mã OTP gồm 6 số">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"/>
    </com.google.android.material.textfield.TextInputLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSendOTP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_custom_bogoc"
        android:text="Kích hoạt"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_slab_bold"
        android:textColor="@color/white">
    </androidx.appcompat.widget.AppCompatButton>


    <TextView
        android:id="@+id/tvSendOTPAgain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gửi lại mã OTP!"
        android:textSize="16sp"
        android:gravity="center_horizontal"
        android:textColor="@color/main"/>


</LinearLayout>