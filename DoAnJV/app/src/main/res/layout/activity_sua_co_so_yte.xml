<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SuaCoSoYTeActivity"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#006466">
        <ImageButton
            android:id="@+id/back_SuaThongTinCoSoYTe1"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back_activity"
            android:background="#006466">
        </ImageButton>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sửa thông tin cơ sở y tế"
            android:textSize="20sp"
            android:fontFamily="@font/roboto_slab"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal|center_vertical"/>
    </FrameLayout>

    //khung 2
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        //name
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Cơ sở y tế"
                    android:textColor="@color/black"
                    android:textSize="15dp" />
            </LinearLayout>
            <EditText
                android:id="@+id/tenCSYT"
                android:layout_width="185dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/edit_text_background"
                android:textSize="15dp" />
        </LinearLayout>

        //CMND
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Địa chỉ"
                    android:textColor="@color/black"
                    android:textSize="15dp" />
            </LinearLayout>
            <EditText
                android:id="@+id/diachi"
                android:layout_width="195dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/edit_text_background"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnDatLaiSuaCSYT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            app:icon="@drawable/replay"
            android:text="Đặt lại"
            android:textSize="15dp"
            app:iconTint="@color/black"
            android:layout_marginLeft="140dp"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dsbenhnhan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
</LinearLayout>